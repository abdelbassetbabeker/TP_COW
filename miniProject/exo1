import './App.css';
import React, { useState, useEffect } from 'react';
import './style.css'


class App extends React.Component {

    constructor(props) {
        super(props);
        this.state = {
            para: [
                {
                    text: 'clicked'
                },
                {
                    text: 'clicked'
                },
            ],
        };
    }


    render() {


        const handelClick = () => {
            var para = document.createElement("p");
            var nodeText = document.createTextNode("Clicked!");
            para.appendChild(nodeText);
            var element = document.getElementById("paragraph");
            element.appendChild(para);
        }



        return (
            <>
                <div className='container'>
                    < button className='btn' onClick={handelClick} > Button</button >
                </div >
                <div id='paragraph' className='text'></div>
            </>
        );
    }
}

export default App;
